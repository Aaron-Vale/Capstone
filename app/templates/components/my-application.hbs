<nav class="navbar">
  <div class="container-fluid">
    {{navbar-header}}

    <div class="collapse navbar-collapse" id="navigation">
      <ul class="nav navbar-nav">
        {{#if isAuthenticated}}
        <li>{{#link-to "quizzes"}}Quizzes{{/link-to}}</li>
        <li>{{#link-to "leaderboard"}}Leaderboard{{/link-to}}</li>
        {{/if}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if isAuthenticated}}
        <img class="propic" src={{propic}}>
        <li>{{#link-to "account" id}}Account Settings {{/link-to}} </li>
        <li><a href="#" {{action "signOut"}}>Sign Out</a></li>
        {{else}}
        <li>{{#link-to "sign-up"}}Sign Up{{/link-to}}</li>
        <li>{{#link-to "sign-in"}}Sign In{{/link-to}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

<div class="col-md-8 col-md-offset-2">
  {{outlet}}
</div>

<footer>
  {{#if isAuthenticated}}
    <p class="footer-text"> Username: {{username}} Score: {{score}}  </p>
  {{/if}}
</footer>
