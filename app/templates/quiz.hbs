<h1> {{model.category}}: {{model.title}} </h1>
{{#if model.editable}}
  <div class="quiz-edit">
    <h4>This is your quiz! Add a Question:</h4>
    {{create-question-form quiz=model.id createQuestion='createQuestion'}}
    <h4>Or, change the quiz title/category.</h4>
    {{edit-quiz-form quiz=model editQuiz='editQuiz'}}
  </div>
{{/if}}

{{#each model.questions as |question|}}
  {{quiz-question question=question}}
  {{#if model.editable}}
    {{#link-to 'question' question.id}}Modify Question {{/link-to}}
  {{/if}}
{{/each}}
